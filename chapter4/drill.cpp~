#include "../std_lib_facilities.h"

int main()
{
    double val1;
    double val2;
    //    int i = 0;
    while(cin >>val1 >> val2)
        {
            if(val1 == val2)
                {cout << "The numbers are equal \n";}
            else if(val1 < val2)
                {
                    cout << "The smallest number is: " << val1 << " and the largest is " << val2 << '\n';
                    if((val2 - val1) <= 1.0/10000000)
                        {
                        cout << "The numbers are almost equal \n";
                    }
                }
            else{
                    cout << "The smallest number is: " << val2 << " and the largest is " << val1 << '\n';
                    if((val1 - val2) <= 1.0/10000000)
                        {cout << "The numbers are almost equal \n";}
            }

               

        }
  return 0;
}
